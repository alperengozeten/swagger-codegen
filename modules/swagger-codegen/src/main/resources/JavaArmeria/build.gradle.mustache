plugins {
    id 'java'
}

group '{{groupId}}'
version '{{artifactVersion}}'

repositories {
    mavenCentral()
}

dependencies {
    // Adjust the list as you need.
    ['armeria',
    'armeria-brave',
    'armeria-grpc',
    'armeria-jetty9',
    'armeria-kafka',
    'armeria-logback',
    'armeria-retrofit2',
    'armeria-rxjava3',
    'armeria-saml',
    'armeria-thrift0.13',
    'armeria-tomcat9',
    'armeria-zookeeper3'].each {
    implementation "com.linecorp.armeria:${it}:1.9.2"
    }

    // Logging
    runtimeOnly 'ch.qos.logback:logback-classic:1.2.3'
    runtimeOnly 'org.slf4j:log4j-over-slf4j:1.7.31'
}